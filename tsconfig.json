{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/bin",
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*", "test/**/*"]
}
