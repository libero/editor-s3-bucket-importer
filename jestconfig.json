{
  "collectCoverage": true,
  "coverageDirectory": "./dist/jest",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 0
    }
  },
  "globals": {
    "ts-jest": {
      "exclude": ["node_modules"]
    }
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest",
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testPathIgnorePatterns": ["/node_modules/", "/build/", "/dist/", "/test_old/"]
}
